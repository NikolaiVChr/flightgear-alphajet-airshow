<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>pression.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needleTF</object-name>
    <object-name>needleFS</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needleTF</object-name>
    <object-name>needleFS</object-name>
    <emission>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>needleTF</object-name>
    <property>/engines/engine[0]/fuel-pressure-psi</property>
    <interpolation>
      <entry><ind>   0.00000 </ind><dep>    0 </dep></entry> <!--   0 mbar -->
      <entry><ind>   1.45038 </ind><dep>  -33 </dep></entry> <!-- 100 mbar -->
      <entry><ind>   2.90075 </ind><dep>  -64 </dep></entry> <!-- 200 mbar -->
      <entry><ind>   4.35113 </ind><dep>  -98 </dep></entry> <!-- 300 mbar -->
      <entry><ind>   5.07632 </ind><dep> -115 </dep></entry> <!-- 350 mbar -->
    </interpolation>
    <center>
      <x-m> -0.002 </x-m>
      <y-m> -0.022 </y-m>
      <z-m> -0.001 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>needleFS</object-name>
    <property>/engines/engine[1]/fuel-pressure-psi</property>
    <interpolation>
      <entry><ind>   0.00000 </ind><dep>   0 </dep></entry> <!--   0 mbar -->
      <entry><ind>   1.45038 </ind><dep>  33 </dep></entry> <!-- 100 mbar -->
      <entry><ind>   2.90075 </ind><dep>  64 </dep></entry> <!-- 200 mbar -->
      <entry><ind>   4.35113 </ind><dep>  98 </dep></entry> <!-- 300 mbar -->
      <entry><ind>   5.07632 </ind><dep> 115 </dep></entry> <!-- 350 mbar -->
    </interpolation>
    <center>
      <x-m> -0.002 </x-m>
      <y-m> -0.022 </y-m>
      <z-m> -0.001 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

