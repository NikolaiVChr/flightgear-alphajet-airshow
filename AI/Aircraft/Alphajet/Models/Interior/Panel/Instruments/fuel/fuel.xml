<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>fuel.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>consumables/fuel/tank[0]/level-lbs</property>
    <interpolation>
      <entry><ind>    0.00 </ind><dep>   0 </dep></entry>
      <entry><ind>  308.64 </ind><dep>  39 </dep></entry> <!--  200 litres -->
      <entry><ind>  617.28 </ind><dep>  78 </dep></entry> <!--  400 litres -->
      <entry><ind>  925.92 </ind><dep> 119 </dep></entry> <!--  600 litres -->
      <entry><ind> 1234.56 </ind><dep> 156 </dep></entry> <!--  800 litres -->
      <entry><ind> 1543.20 </ind><dep> 192 </dep></entry> <!-- 1000 litres -->
      <entry><ind> 1851.84 </ind><dep> 227 </dep></entry> <!-- 1200 litres -->
      <entry><ind> 2006.16 </ind><dep> 245 </dep></entry> <!-- 1300 litres -->
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

